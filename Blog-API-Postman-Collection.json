            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Blog Post\",\n  \"content\": \"This is the content of my first blog post. It contains some interesting information about web development and modern frameworks.\",\n  \"description\": \"A blog post about web development\",\n  \"isPublished\": true\n}"
